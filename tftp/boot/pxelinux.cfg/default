UI menu.c32
TIMEOUT 0

MENU TITLE Yay PXE boot!

LABEL memtest
	MENU LABEL Memtest86+ v5.01
	KERNEL iso/memtest

LABEL hdt
	MENU LABEL HDT (Hardware Detection Tool)
	COM32 hdt.c32

LABEL plop
	MENU LABEL PLoP Boot Manager
	TEXT HELP
	Launch PLoP Boot Manager, to boot from USB and enable USB 2.0 on
	some BIOSes that only support on 1.1, if supported by the controller.
	ENDTEXT
	LINUX iso/plpbt.bin

#LABEL lubuntu_memdisk
#	MENU LABEL Lubuntu (memdisk)
#	TEXT HELP
#	Load Lubuntu ISO into RAM and boot, if it fits
#	ENDTEXT
#	KERNEL memdisk
#	APPEND initrd=iso/lubuntu.iso


MENU SEPARATOR

LABEL -
	LOCALBOOT 0
	MENU LABEL Boot first hard disk

LABEL -
	LOCALBOOT 1
	MENU LABEL Boot second hard disk

MENU SEPARATOR

LABEL reboot
	MENU LABEL Reboot
	COM32 reboot.c32

LABEL poweroff
	MENU LABEL Power Off
	COM32 poweroff.c32
